pipeline {
    agent any
    tools {
    maven 'Maven 3.6.0'
  }
    stages {
        stage('Build') {
            steps {
                sh 'sudo mvn -B -DskipTests clean package'
            }
        }
        stage('Test') {
            steps {
                sh 'sudo mvn test'
            }
            post {
                always {
                    junit 'target/surefire-reports/*.xml'
                }
            }
        }
        stage('Deliver') {
            steps {
                sh './jenkins/scripts/deliver.sh'
            }
        }
    }
}
